{
    "openapi": "3.0.0",
    "info": {
        "title": "ISport API documentation",
        "version": "0.1"
    },
    "paths": {
        "/api/register": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Register new user",
                "operationId": "App\\Http\\Controllers\\API\\UserController::register",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "example": {
                                    "first_name": "Roman",
                                    "last_name": "Bylbas",
                                    "phone": "380501234567",
                                    "password": "iampassword",
                                    "c_password": "iampassword"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful registration",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "example": {
                                        "success": true,
                                        "message": "Success",
                                        "data": {
                                            "token": "Bearer token"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Invalid parameters"
                    }
                }
            }
        }
    }
}